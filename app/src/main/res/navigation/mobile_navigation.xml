<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation.xml"
    app:startDestination="@id/yahooAPIAuthenticateFragment">

    <fragment
        android:id="@+id/currentWeatherFragment"
        android:name="ru.kazakovanet.synoptic.ui.weather.current.CurrentWeatherFragment"
        tools:layout="@layout/current_weather_fragment" />
    <fragment
        android:id="@+id/futureListWeatherFragment"
        android:name="ru.kazakovanet.synoptic.ui.weather.future.list.FutureListWeatherFragment"
        tools:layout="@layout/future_list_weather_fragment" >
        <action
            android:id="@+id/actionDetail"
            app:destination="@id/futureDetailWeatherFragment" />
    </fragment>
    <fragment
        android:id="@+id/futureDetailWeatherFragment"
        android:name="ru.kazakovanet.synoptic.ui.weather.future.detail.FutureDetailWeatherFragment"
        tools:layout="@layout/future_detail_weather_fragment" >
        <argument
            android:name="dateLong"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.kazakovanet.synoptic.ui.settings.SettingsFragment" />
    <fragment
        android:id="@+id/yahooAPIAuthenticateFragment"
        android:name="ru.kazakovanet.synoptic.ui.auth.YahooAPIAuthenticateFragment"
        android:label="Yahoo Authenticate"
        tools:layout="@layout/yahoo_api_authenticate_fragment">
        <argument
            android:name="code"
            app:argType="string" />
        <action
            android:id="@+id/actionCurrent"
            app:destination="@id/currentWeatherFragment" />
    </fragment>
</navigation>